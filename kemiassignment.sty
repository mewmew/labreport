\def\thickhrulefill{\leavevmode \leaders \hrule height 1pt\hfill \kern \z@}
\renewcommand{\maketitle}{
	\begin{titlepage}
		\let\footnotesize\small
		\let\footnoterule\relax
		\parindent \z@
		\reset@font
		\hspace{-30pt}
		\includegraphics[width=0.27\textwidth]{inc/logo.png}
		\hspace{20pt}
		\vrule depth 0.8\textheight
		\mbox{\hspace{0.75cm}}
		\vtop{
			\vskip 80\p@
			\begin{flushleft}
				\large{\parbox[t]{12cm}{\@coursename ~\\(\@coursenumber )}}
			\end{flushleft}
			\vskip 10\p@
			\begin{flushleft}
				\huge \bfseries \parbox[t]{12cm}{\@title} \par
			\end{flushleft}
			\vskip 20\p@
			\begin{flushleft}
				\large \@date \par
			\end{flushleft}
			\vskip 200\p@
			\begin{flushleft}
				\begin{tabular}{ll}
					\ifthenelse{\isnamedefined{@coursename}    }{Course:           & \parbox[t]{8cm}{\@coursename}     \\}{}%
					\ifthenelse{\isnamedefined{@coursepart}    }{Course part:      & \@coursepart     \\}{}%
					\ifthenelse{\isnamedefined{@author}        }{Author:           & \@author         \\}{}%
					\ifthenelse{\isnamedefined{@grouppartner}  }{Group partner(s): & \parbox[t]{8cm}{\@grouppartner}   \\}{}%
					\ifthenelse{\isnamedefined{@groupid}       }{Group             & \@groupid   \\}{}%
					\ifthenelse{\isnamedefined{@assignmentdate}}{Date:             & \@assignmentdate}{}%
				\end{tabular}
			\end{flushleft}
			\vfil
		}
		\null
	\end{titlepage}
	\setcounter{footnote}{0}
}
